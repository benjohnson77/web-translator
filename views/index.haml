%html
	%head
		%meta{:charset => "utf-8"}
		%title Pig Latin Translator
		%meta{:name => "description", :content => ""}
		%meta{:name => "author", :content => ""}

		:plain
			<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
			<!--[if lt IE 9]>
				<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
			<![endif]-->

		/ include bootstrap and font awesome
		%link{:href=>"//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", :rel=>"stylesheet"}
		%link{:href=>"//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", :rel=>"stylesheet"}

		/ add body padding styles
		%link{ :href => "/css/styles.css", :type => "text/css", :rel => "stylesheet" }

		%script{ :type => "text/javascript", :src =>"//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
		%script{ :type => "text/javascript", :src =>"//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}
		%script{ :type => "text/javascript", :src =>"/js/app.js"}

	%body
		
		%div{ :class => "container"}
		
			%div{:id => "translator", :class => "panel panel-primary"}
				%div{:class => "panel-heading"}
					%h3{:class => "panel-title"} Translator
				
				%form{ :action => "/translate", :id => "translate_form", :method => "post", :class => "form-horizontal"}
			
					%div{:class => "panel-body"}
						%div{:class => "row-fluid"}
							%div{:class => "form-group col-md-6"}
								%label{:for => "language", :class => "control-label"}
								%select{:name => "language", :class => "form-control"}  
									-[["English", "US-EN"]].each do |option|
										%option{:value => option[1]} #{option[0]} 
							%div{:class => "form-group col-md-6 pull-right"}
								%label{:for => "language", :class => "control-label"}
								%select{:name => "language", :class => "form-control"}  
									-[["Pig Latin", "EN-PL"]].each do |option|
										%option{:value => option[1]} #{option[0]} 
						%div{:class => "row-fluid"}
							%div{:class => "form-group col-md-6"}
								%label{:for => "phrase", :class => "control-label"} Phrase to Translate:
								%textarea{:name => "phrase", :class => "form-control", :rows => "10", :value => "#{phrase}"} #{phrase}
							%div{:class => "form-group col-md-6 pull-right"}
								%label{:for => "translated_phrase", :class => "control-label"} Translates To:
								%textarea{:name => "translated_phrase", :class => "form-control", :rows=> "10", :value => ""} #{translated_phrase}
						%div{:class => "row-fluid"}
							%div{:class => "form-group col-md-6"}
								%input{:type => "submit", :value => "Translate", :class => "btn btn-primary pull-right"}
							%div{:class => "form-group col-md-6 pull-right"}
								%a{:href => "/", :class => "btn btn-primary pull-right"} Clear
